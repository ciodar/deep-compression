{
    "name": "Mnist_LeNet5",
    "n_gpu": 1,
    "arch": {
        "type": "LeNet5",
        "args": {
            "num_classes": 10,
            "grayscale": true,
            "dropout_rate": 0
        }
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 6,
            "resize": true
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 1e-2,
            "momentum": 0.9,
            "weight_decay": 1e-3,
            "nesterov": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy",
        "topk_accuracy"
    ],
    "trainer": {
        "epochs": 60,
        "save_dir": "runs/",
        "verbosity": 1,
        "monitor": "max val_accuracy",
        "loggers": ["TensorBoard"],
        "callbacks": {
            "ModelCheckpoint":
            {
                "save_top_k": 1,
                "monitor": "val_accuracy",
                "mode": "max"
            },
            "Quantization":
            {
                "epoch": 1,
                "quantization_fn": "density_quantization",
                "parameter_names": ["weight"],
                "amount": 6,
                "verbose": 2
            }
        }
    }
}