{
    "name": "Cifar100_LeNet5",
    "n_gpu": 1,
    "arch": {
        "type": "LeNet5L",
        "args": {
            "num_classes": 100,
            "grayscale": false,
            "dropout_rate": 0
        }
    },
    "data_loader": {
        "type": "Cifar100DataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 6
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 1e-2,
            "momentum": 0.9,
            "weight_decay": 5e-4,
            "nesterov": false
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy",
        "topk_accuracy"
    ],
    "trainer": {
        "min_epochs": 15,
        "save_dir": "runs/",
        "verbosity": 1,
        "monitor": "max val_accuracy",
        "loggers": ["TensorBoard"],
        "callbacks": {
            "ModelCheckpoint": {
                "save_top_k": 1,
                "monitor": "val_accuracy",
                "every_n_epochs":1,
                "mode": "max"
            },
            "EarlyStopping": {
                "monitor": "val_accuracy",
                "mode": "max",
                "patience": 5,
                "min_delta": 0.00
            }
        }
    }
}