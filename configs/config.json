{
    "name": "Mnist_LeNet300",
    "n_gpu": 1,

    "arch": {
        "type": "LeNet300",
        "args": {
            "num_classes": 10
        }
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": ["accuracy","topk_accuracy"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,
        "save_dir": "runs/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    },
    "prune": {
        "type": "PruneScheduler",
        "args": {
            "levels": {
                "fc1.weight": 0.92,
                "fc2.weight": 0.91,
                "fc3.weight": 0.74
            }
        }
    },
    "quantize": {

    }
}
